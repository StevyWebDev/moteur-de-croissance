{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div id="form-auth">
        <section id="section-page-title">
            <h2>Inscription</h2>
        </section>

        <section id="form-inscription">
            {{ form_start(registrationForm) }}
            {{ form_errors(registrationForm) }}
                <div class="bloc-input">
                    {{ form_label(registrationForm.name, 'Nom', {'label_attr' : {'class' : 'label name-label'}}) }}
                    {{ form_widget(registrationForm.name, {'attr' : {'placeholder' : 'Nom'}}) }}
                </div> 

                <div class="bloc-input">
                    {{ form_label(registrationForm.firstname, 'Prénom', {'label_attr' : {'class' : 'label firstname-label'}}) }}
                    {{ form_widget(registrationForm.firstname, {'attr' : {'placeholder' : 'Prénom'}}) }}
                </div>
                
                <div class="bloc-input">
                    {{ form_label(registrationForm.email.first, 'Email', {'label_attr' : {'class' : 'label email-label'}}) }}
                    {{ form_widget(registrationForm.email.first, {'attr' : {'placeholder' : 'Email'}}) }}
                </div> 
                
                <div class="bloc-input">
                    {{ form_label(registrationForm.email.second, 'Email', {'label_attr' : {'class' : 'label email-label'}}) }}
                    {{ form_widget(registrationForm.email.second, {'attr' : {'placeholder' : 'Confirmer votre email'}}) }}
                </div> 
                
                <div class="bloc-input">
                    {{ form_label(registrationForm.phone, 'Téléphone', {'label_attr' : {'class' : 'label phone-label'}}) }}
                    {{ form_widget(registrationForm.phone, {'attr' : {'placeholder' : 'Téléphone'}}) }}
                </div>  
                
                <div class="bloc-input">
                    {{ form_label(registrationForm.password.first, 'Mot de passe', {'label_attr' : {'class' : 'label password-label'}}) }}
                    {{ form_widget(registrationForm.password.first, { label: 'Password', 'attr' : {'placeholder' : 'Mot de passe'} }) }}
                </div> 
                
                <div class="bloc-input">
                    {{ form_label(registrationForm.password.second, 'Confirmer votre mot de passe', {'label_attr' : {'class' : 'label password-label'}}) }}
                    {{ form_widget(registrationForm.password.second, { 'attr' : {'placeholder' : 'Confirmer votre mot de passe'} }) }}
                </div> 
                
                <div class="bloc-button">
                    <div class="bloc-login">
                        <button class="button button-login" type="submit">Inscription</button>
                    </div>
                    <div class="bloc-inscription">
                        <a class="button button-inscription" href="{{ path('app_login') }}">Connexion</a>
                    </div>
                </div>
            {{ form_end(registrationForm) }}
        </section>
    </div>
    
{% endblock %}